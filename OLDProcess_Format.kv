<GraphScreen>:
    BoxLayout:
        orientation: 'vertical'

        Image:
            id: graphImage
            allow_stretch: True
            keep_ratio: True

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1

            Button:
                text: "Home"
                on_release: root.backToMenu()
                
            Button:
                text: "Refresh"
                on_release: root.refreshGraph()        


<DataScreen>:
    BoxLayout:
        orientation: 'vertical'

        Image:
            id: dataImage
            allow_stretch: True
            keep_ratio: True

        Button:
            text: "Back to Menu"
            size_hint_y: 0.1
            on_release: root.backToMenu()