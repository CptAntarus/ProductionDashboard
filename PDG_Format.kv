<StartScreen>:
    MDFloatLayout:
        MDLabel:
            text: "Process Dashboard"
            font_style: "H5"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {"center_x":.5,"center_y":.7}

        MDRaisedButton:
            text: "Create New Report"
            pos_hint: {"center_x":.35,"center_y":.4}
            on_release: app.root.switchScreen("createNewReport")

        MDRaisedButton:
            text: "Edit Previous Report"
            pos_hint: {"center_x":.65,"center_y":.4}
            on_release: app.root.switchScreen("editOldReport")





<EditOldReport>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Previous Work Orders"
            right_action_items: [["menu", lambda x: root.open_menu(x)]]
            left_action_items: [["arrow-left", lambda y: app.root.backButton(y)]]

        ScrollView:
            MDList:
                id: reportList

<RepDataInput>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: RepDataInputTitle
            title: ""
            left_action_items: [["arrow-left", lambda y: app.root.backButton(y)]]

        MDGridLayout:
            cols: 3
            spacing: dp(20)
            padding: dp(20)
            size_hint_y: 1

            MDRaisedButton:
                text: "Option 1"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 2"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 3"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 4"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 5"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 6"
                on_release: # Do Something

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'
            spacing: dp(20)
            padding: dp(20)

            Image:
                source: 'L3Harris-Logo.png'
                size_hint: 0.3, 0.3
                padding: dp(30)
                pos_hint: {"center_x":0.2, "center_y":0.2}


<CreateNewReport>:
    MDTopAppBar:
        id: CreatenewReportTopBar
        title: "Create New Report"
        left_action_items: [["arrow-left", lambda y: app.root.backButton(y)]]
        right_action_items: [["home", lambda x: app.root.switchScreen('startScreen')]]
        pos_hint: {"top": 1}

    MDFloatLayout:
        # MDLabel:
        #     text: "Select A Project:"
        #     size_hint: .3,.4
        #     pos_hint: {"center_x":.3,"center_y":.87}

        MDTextField:
            id: prosSearchInput
            mode: "rectangle"
            hint_text: "Project Name"
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": .5, "center_y": .75}

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: .7, .45
            pos_hint: {"center_x":.5,"center_y":.45}

            ScrollView:
                MDList:
                    id: processList

<ActionsScreen>:
    MDTopAppBar:
        id: ActionsScreenTopBar
        title: ""
        left_action_items: [["arrow-left", lambda y: app.root.backButton(y)]]
        right_action_items: [["home", lambda x: app.root.switchScreen('startScreen')]]
        pos_hint: {"top": 1}

    MDFloatLayout:
        AnchorLayout:
            anchor_x: "center"
            # anchor_y: "bottom"
            size_hint: 1, None
            height: self.children[0].height + dp(40)

            MDGridLayout:
                id: actionsGrid
                cols: 4
                spacing: dp(30)
                padding: dp(10)
                width: self.minimum_width
                height: self.minimum_height
                adaptive_size: True
