<StartScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(90)
        size_hint: 0.6, None
        height: self.minimum_height
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            text: "Process Dashboard\n(EDIT FONT LATER)"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]

        AnchorLayout:
            anchor_x: 'center'
            size_hint_y: None
            height: dp(48)

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(70)
                size_hint: None, None
                size: self.minimum_size

                MDRaisedButton:
                    text: "Create New Report"
                    on_release: app.switchScreen("createNewReport", "startScreen")

                MDRaisedButton:
                    text: "Edit Previous Report"
                    on_release: app.switchScreen("editOldReport", "startScreen")



<EditOldReport>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Previous Work Orders"
            right_action_items: [["menu", lambda x: root.open_menu(x)]]
            left_action_items: [["arrow-left", lambda y: app.backButton(y)]]

        ScrollView:
            MDList:
                id: reportList

<RepDataInput>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "PAGE TITLE HERE"
            left_action_items: [["arrow-left", lambda y: app.backButton(y)]]

        MDGridLayout:
            cols: 3
            spacing: dp(20)
            padding: dp(20)
            size_hint_y: 1

            MDRaisedButton:
                text: "Option 1"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 2"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 3"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 4"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 5"
                on_release: # Do Something
            MDRaisedButton:
                text: "Option 6"
                on_release: # Do Something

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'
            spacing: dp(20)
            padding: dp(20)

            Image:
                source: 'L3Harris-Logo.png'
                size_hint: 0.3, 0.3
                padding: dp(30)
                pos_hint: {"center_x":0.2, "center_y":0.2}


<CreateNewReport>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Create New Work Order"
            left_action_items: [["arrow-left", lambda y: app.backButton(y)]]

        MDFloatLayout:
            MDLabel:
                text: "Select A Project:"
                size_hint: .3,.4
                pos_hint: {"center_x":.3,"center_y":.87}

            MDTextField:
                id: prosSearchInput
                mode: "rectangle"
                hint_text: "Project Name"
                size_hint: 0.7, 0.1
                pos_hint: {"center_x": .5, "center_y": .8}

            MDBoxLayout:
                orientation: 'vertical'
                size_hint: .7, .45
                pos_hint: {"center_x":.5,"center_y":.5}

                ScrollView:
                    MDList:
                        id: processList
